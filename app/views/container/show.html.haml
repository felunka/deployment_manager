.card.mt-3
  %h5.card-header.d-flex.justify-content-between.align-items-center
    = "#{t('activerecord.models.container')} (#{params[:id]})"
    .d-flex.model-buttons
      = button_to(action_node_container_path(@node, params[:id], "start"), class: "btn btn-primary", method: :get, form: { data: { turbo_frame: "_top"} }) do
        = icon "play-fill"
      = button_to(action_node_container_path(@node, params[:id], "stop"), class: "btn btn-danger", method: :get, form: { data: { turbo_confirm: t("helpers.submit.confirm"), turbo_frame: "_top"} }) do
        = icon "stop-fill"
      = button_to(action_node_container_path(@node, params[:id], "rm"), class: "btn btn-danger", method: :get, form: { data: { turbo_confirm: t("helpers.submit.confirm"), turbo_frame: "_top"} }) do
        = icon "trash"
      = button_to t("helpers.navigate.back"), node_path(@node), class: "btn btn-primary", method: :get
  .card-body
    %pre.mt-2.vh-80
      %code
        = @container_detail